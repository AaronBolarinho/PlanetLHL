  <body>

    <nav id="nav-bar">
      <input class="Register" type="submit" value="Register">
      <input class="Login" type="submit" value="Login">
      <input class="Create" type="submit" value="Create">
      <input class="Search" type="submit" value="Search">
    </nav>
    <div>
      <section class="searchForm">
        <form id="newTweetForm" action="/tweets" method="POST">
          <textarea id="tweeterText" name="text" placeholder="Search for cool stuff from our beautiful planet!"></textarea>
          <input id="postTweet" type="submit" value="Search!">
          <span id="charCounter" class="counter">140</span>
        </form>
    </div>
    <div>
      <section class="createForm">
        <form id="newTweetForm" action="/tweets" method="POST">
          <textarea id="tweeterText" name="Resource-url" placeholder="Find something awesome you want to share? Create a link!"></textarea>
          <textarea id="tweeterText" name="Resource-title" placeholder="Find something awesome you want to share? Create a link!"></textarea>
          <textarea id="tweeterText" name="Resource-description" placeholder="Find something awesome you want to share? Create a link!"></textarea>
          <textarea id="tweeterText" name="Resource-tags" placeholder="Find something awesome you want to share? Create a link!"></textarea>
          <input id="postTweet" type="submit" value="Create!">
          <span id="charCounter" class="counter">140</span>
        </form>
    </div>

  </body>
</html>

