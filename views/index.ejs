<!DOCTYPE html>
<html lang="en">
    <head>
    <!-- Meta Information -->
    <title>Home Page</title>

    <!-- External CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Crimson+Text" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Krub" rel="stylesheet">

    <!-- App CSS -->
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/mainPageForms.css" type="text/css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


    <!-- External JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/effects.js"></script>
  </head>

  <body>

    <div class="container">

      <h1 class="siteTitle"> p l a n e t &nbsp; L H L </h1>

      <div class="bird-container bird-container--one">
        <div class="bird bird--one"></div>
      </div>

      <div class="bird-container bird-container--two">
        <div class="bird bird--two"></div>
      </div>

      <div class="bird-container bird-container--three">
        <div class="bird bird--three"></div>
      </div>

      <div class="bird-container bird-container--four">
        <div class="bird bird--four"></div>
      </div>

    </div>


    <p class="siteDescr"> Do you love the planet as much as we do? <br> Share your love with us!</p>
    <p class="userName"> Welcome
       <input id="Show" class="showAll" type="submit" value="Show Resources">
      <% if (typeof name !== 'undefined') { %>
               <%= name %>
          <% } %>!</p>
   <% if (typeof id !== 'undefined' && id !== -1) { %>
    <a href="http://localhost:8080/users/<%= token%>" class="pageLink" >My Page</a>

    <% } %>


    <nav id="nav-bar">
      <% if (typeof id !== 'undefined' && id !== -1) { %>
        <input class="Logout" type="submit" value="Logout">
        <input class="Create" type="submit" value="Create">
      <% } %>
      <input class="Login" type="submit" value="Login" >
      <input class="Register" type="submit" value="Register">
      <input class="Search" type="submit" value="Search">
    </nav>

    <div>
      <section class="searchForm">
        <form id="newSearchForm" action="/tweets" method="POST">
          <textarea id="searchFormText" name="text" placeholder="Search for cool stuff from our beautiful planet!"></textarea>
          <input id="postSearchForm" type="submit" value="Search!">
        </form>
    </div>

    <div>
      <section class="createForm">
        <form id="newCreateForm" action="/tweets" method="POST">
          <textarea id="Resource-url" name="Resource-url" placeholder="Add your URL here!"></textarea>
          <textarea id="Resource-description" name="Resource-description" placeholder="Tell us about this!"></textarea>
          <textarea id="Resource-tags" name="Resource-tags" placeholder="Give this some tags!"></textarea>
          <input id="postCreateForm" type="submit" value="Create!">
        </form>
    </div>

    <div>
      <section class="registerForm">
        <form id="newRegisterForm" action="/register" method="POST">
          <input id="UserName" name="UserName" placeholder="Enter your desired username">
          <input type="password" id="UserPassword" name="UserPassword"
               placeholder="Enter your password!" />
          <input id="postRegister" type="submit" value="Register!">
        </form>
    </div>

    <div>
      <section class="loginForm">
        <form id="newLoginForm">
          <input id="UserNameLogin" name="UserNameLogin" placeholder="Enter your username!">
          <input type="password" id="UserPasswordLogin" name="UserPasswordLogin"
               placeholder="Enter your password!" />
          <input id="postLogin" type="submit" value="Login!">
        </form>
    </div>

    <section class="resourceContainer" style="height:800px; width: auto;">
      <main role="main">

      <div class="album py-5">
        <div class="container">

          <div class="row">
            <div class="col-xl-4">
             <div class="card sm-2 shadow-sm">
                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x100]" src="https://i.ytimg.com/vi/9NtRJW2dpvo/maxresdefault.jpg" data-holder-rendered="true">
                <div class="card-body">
                  <p class="card-text">This is a wider.</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">Visit</button>
                      <% if (typeof id !== 'undefined' && id !== -1) { %>
                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary buttonLike">Like</button>
                        <div class="dropdown">
                        <button type="button" class="btn btn-sm btn-outline-secondary buttonRate">Rate</button>
                          <div class="dropdown-content">
                            <form class="newRatingForm" >
                              <textarea class="UserRate" name="UserRate"></textarea>
                              <input class="postRating" type="submit" value="Rate!">
                            </form>
                          </div>
                        </div>
                      <% } %>

                    </div>
                  </div>
                  <small class="textMuted"> Likes: 9 </small>
                  <small class="textMuted"> Avg Rating: 10 </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    </section>

  </body>
</html>
